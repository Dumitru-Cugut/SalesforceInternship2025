<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_required_when_case_rejected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISBLANK(TEXT( Rejection_Reason__c )),
    ISPICKVAL(Status, &quot;Rejected&quot;)
)</errorConditionFormula>
    <errorDisplayField>Rejection_Reason__c</errorDisplayField>
    <errorMessage>Rejection reason is required when the Case is Rejected.</errorMessage>
</ValidationRule>
